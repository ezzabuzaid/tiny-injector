{
  "name": "tiny-injector",
  "version": "0.0.1",
  "description": "Lightweight dependency injection library for TypeScript applications",
  "main": "index",
  "scripts": {
    "test": "jest --runInBand --detectOpenHandles --no-cache",
    "test:majestic": "majestic",
    "release": "dotenv release-it",
    "start": "ts-node src/index.ts",
    "build:watch": "tsc  --project tsconfig.app.json --watch",
    "build": "tsc --project tsconfig.app.json",
    "prebuild": "del-cli ./dist/",
    "postbuild": "cpy 'README.md' 'package*.json' ./dist/ --no-overwrite --parents"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ezzabuzaid/tiny-injector.git"
  },
  "author": "ezzabuzaid",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ezzabuzaid/tiny-injector/issues"
  },
  "homepage": "https://github.com/ezzabuzaid/tiny-injector#readme",
  "keywords": [
    "dependency injection",
    "inversion of control",
    "containers",
    "ioc",
    "di",
    "decorators",
    "ezzabuzaid"
  ],
  "private": false,
  "release-it": {
    "git": {
      "requireBranch": "main",
      "requireCleanWorkingDir": true,
      "requireCommits": true,
      "changelog": "npx auto-changelog --stdout --commit-limit false -u --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false,
      "publishPath": "./dist"
    },
    "hooks": {
      "after:bump": "npx auto-changelog -p",
      "before:npm:publish": "npm run build"
    }
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^4.1.0",
    "@release-it/keep-a-changelog": "^2.3.0",
    "@types/jest": "^27.4.0",
    "cpy-cli": "^1.0.1",
    "del-cli": "^4.0.1",
    "dotenv-cli": "^4.1.1",
    "jest": "^27.4.7",
    "majestic": "^1.8.1",
    "release-it": "^14.12.1",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0"
  }
}
